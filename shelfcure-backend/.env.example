# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/shelfcure

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d
SESSION_SECRET=your-super-secret-session-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=ShelfCure <noreply@shelfcure.com>

# WhatsApp Integration
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER=your-whatsapp-business-number

# OCR Configuration
TESSERACT_LANG=eng
OCR_CONFIDENCE_THRESHOLD=60

# AI Configuration (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Payment Gateway (for subscriptions)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Analytics & Monitoring
ANALYTICS_ENABLED=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Demo Data
ENABLE_DEMO_DATA=true
DEMO_ADMIN_EMAIL=admin@shelfcure.com
DEMO_ADMIN_PASSWORD=admin123

# Multi-Store Configuration
DEFAULT_STORE_NAME=Main Store
MAX_STORES_PER_SUBSCRIPTION=5

# Notification Settings
LOW_STOCK_THRESHOLD=10
EXPIRY_ALERT_DAYS=30
NOTIFICATION_BATCH_SIZE=50

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
